TARGET := spmv
SRC := main.cc setup.cc mult.cc

# the sstmacro-config script must be found in PATH
CXX :=   icpc
CC :=    icc
CXXFLAGS := -O3 -fopenmp -mmic
CPPFLAGS := -I. -I/home/eric/.local/stow/lwperf-mic/include -DLWPERF_USE_CSV
LIBDIR :=   
PREFIX :=   
LDFLAGS := -L/home/eric/.local/stow/lwperf-mic/lib
LIBS := -llwperf

OBJ := $(SRC:.cc=.o) 

.PHONY: clean install 

all: $(TARGET)

$(TARGET): $(OBJ) 
	$(CXX) -o $@ $+ $(LDFLAGS) $(CXXFLAGS) $(LIBS) 

%.o: %.cc index.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@


clean: 
	rm -f $(TARGET) $(OBJ) 


